<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"
    tools:context="live.livecirc.ScoreFragment">
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvScore"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score" />

        <TextView
            android:id="@+id/tvMatchStarted"
            android:textSize="15dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="MatchStarted" />

        <TextView
            android:id="@+id/tvInningsRequirement"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:fontFamily="monospace"
            android:layout_height="wrap_content"
            android:text="InningsRequirement" />



        <TextView
            android:id="@+id/tvBatsman"
            android:paddingBottom="10dp"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Batsman" />

        <TextView
            android:id="@+id/tvBowler"
            android:paddingBottom="10dp"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Bowler" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/score_refrsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@android:drawable/ic_menu_rotate"
        app:backgroundTint="@android:color/holo_green_dark" />
</FrameLayout>
